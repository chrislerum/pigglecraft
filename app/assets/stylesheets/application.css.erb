@font-face {
  font-family: exolight;
  src: url(/assets/exolight.otf);
}
html, button, input, select, textarea,
.pure-g [class *= "pure-u"] {
  font-family: exolight;
}
body {
  background-color: #FDB5B5;
}
div.byline {
  padding-left: 200px;
  padding-top: 30px;
}
span.section-title {
  font-size: 30px;
}
div.paragraph {
  text-indent: 50px;
}
div.container {
  background-color: white;
  text-align: center;
  margin-left: 50px;
  margin-right: 50px;
}
div.leftalign {
  text-align: left;
}
div.pink {
  background-color: #FDB5B5;
}
